<h3>Listing the Palets</h3>
<h4><%=@palets.count%>|<%=@palets_kgs=@palets.count*960/2%></h4>


<%= link_to 'New Palet',new_tenant_palet_path(@tenant) %>

<div class="media">
  <div class='media-body'>
    <table class='table table-hover'>
      <thead>
        <tr>
          <th>Date</th>
          <th>Code</th>
          <th>Lot  info </th>
         
          <th>Note</th>
         
          
        </tr>
      </thead>

      <tbody> 
        <% @palets.each do |palet| %>
          <tr> 
            <td><%= palet.date.strftime("%e %b %H:%y") %></td>
            <td><%=link_to palet.code,tenant_palet_path(@tenant,palet)%></td>
            <td><%  palet.palet_line_items.each do |pli|%>
            <%=pli.lot.lot%>
            <%=pli.cartons%> cartons
          (<%=pli.lot.purchase.details%><br/>
            <%end%></td>
            <td><%=palet.note%></td>
           
            
           
          </tr>
        <% end %>
      </tbody>
    </table>
        <br>
    </div>
</div>
