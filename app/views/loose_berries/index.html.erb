<h3>Listing Loose Berries</h3>
<%= link_to 'New Loose berry', new_tenant_loose_berry_path %>
<div class='media'>
  <div class='media-body'>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Kgs</th>
      <th>Note</th>
      <th>From </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loose_berries.each do |loose_berry| %>
      <tr>
      <% unless loose_berry.date.nil?%>
        <td><%= loose_berry.date.strftime('%d %m')%></td>
        <%end%>
        <td><%= loose_berry.kg %></td>
        <td><%= loose_berry.note %></td>
        <td><%= loose_berry.purchase.details%></td>
        <td><%= link_to 'Show',tenant_loose_berry_path(@tenant,loose_berry) %></td>
        <td><%= link_to 'Edit', edit_tenant_loose_berry_path(@tenant,loose_berry) %></td>
        <td><%= link_to 'Destroy', [@tenant,loose_berry], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>
</div>

