<h1>Listing Purchases</h1>
<%= link_to 'New Purchase', new_tenant_purchase_path(params[:tenant_id]) %>

<div class="media">
  <div class='media-body'>
    <table class='table table-hover'>
    <thead>
      <tr>
        <th>Date</th>
        <th>Grower</th>
        <th>Location</th>
        <th>Price</th>
        <th>per</th>
        <th>Note</th>
      </tr>
    </thead>

    <tbody>
      <% @purchases.each do |purchase| %>
        <tr>
          <td><%=purchase.created_at.strftime("%d-%m-%Y")%></td>
          <td><%=purchase.pmu.grower.name%></td>
          <td><%=purchase.pmu.location%></td>
          <td><%=purchase.price%></td>
          <td><%=purchase.unit%></td>
          <td><%=purchase.note%></td>
          <td><%=link_to "Show",tenant_purchase_path(@tenant,purchase),class:"btn btn-mini"%></td>
        </tr>
      <% end %>
    </tbody>
    </table>
        <br>
  </div>
</div>
<%= link_to 'New Purchase', new_tenant_purchase_path(params[:tenant_id]) %>
