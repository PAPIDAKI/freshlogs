
<h1>Listing Purchases</h1>

<%= link_to 'New Purchase', new_tenant_purchase_path(@tenant) %>

<div class='media'>
<div class='media-body'>
<table class='table table-hover'>
  <%if @purchases %>
  <thead>
    <tr>
      <th>Date</th>
      <th>Pmu</th>
      <th>Price</th>
      <th>Analysis</th>
      <th>Note</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>
<%end%>
  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.created_at.strftime('%d %m %Y')%></td>
        <td><%= link_to purchase.pmu.try(:details) ,tenant_purchase_path(@tenant,purchase) %></td>
        <td><%= purchase.price %></td>
        <td><%= purchase.analysis%></td>
        <td><%= purchase.note %></td>
       
       
      </tr>
    <% end %>
  </tbody>
</table>
<br>

</div>
</div>


