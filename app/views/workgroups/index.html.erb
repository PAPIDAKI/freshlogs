
<h1>Listing Workgroups</h1>
<%= link_to 'New Workgroup', new_tenant_workgroup_path(@tenant) %>
<br>
<div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workgroups.each do |workgroup| %>
      <tr>
        <td><%= link_to workgroup.title,tenant_workgroup_path(@tenant,workgroup) %></td>
        <td><%= link_to 'Show', tenant_workgroup_path(@tenant,workgroup) %></td>
        <td><%= link_to 'Edit', edit_tenant_workgroup_path(@tenant,workgroup) %></td>
        <td><%= link_to 'Destroy', tenant_workgroup_path(@tenant,workgroup), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>