
<h3><%=@course.name.upcase %> Shift Lists</h3>
<%= link_to 'New Shift list', new_tenant_course_shift_list_path(@tenant,@course) %>
<div class='media'>
<div class='media-body'>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>Date</th>
      <th>From</th>
      <th>To</th>
      <th>Hours</th>
      <th>People</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shift_lists.each do |shift_list| %>
      <tr>
        <td><%= link_to shift_list.start_at.strftime('%d %b %y'), tenant_course_shift_list_path(@tenant,@course,shift_list)%></td>
      
        <td><%=shift_list.start_at.strftime('%H:%M')%></td>
        <td><%= shift_list.end_at.strftime('%H:%M') %></td>
        <td><%= number_with_precision(shift_list.hours_worked,precision:2) %> </td>
        <td><%=shift_list.workers.count%></td>

        <td><%= shift_list.note %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
