<%= form_for([@tenant,@worker]) do |f| %>
  <% if @worker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@worker.errors.count, "error") %> prohibited this worker from being saved:</h2>

      <ul>
      <% @worker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.hidden_field :tenant_id %>
  </div>

  <div class="form-group">
    <%= f.label :type ,class:'control-label'%><br>
   
      <%= f.select :type,[['Driver','Driver'],['Packer','Packer']],{},{class:'form-control'}%>
  </div>
  
  <div class="form-group">
    <%= f.label :name ,class:'control-label'%><br>
    <%= f.text_field :name ,class:'form-control'%>
  </div>

   <div class="form-group">
    <%= f.label :work_for ,class:'control-label'%><br>
    <%= f.text_field :work_for ,class:'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :mobile,class:'control-label' %><br>
    <%= f.text_field :mobile ,class:'form-control'%>
  </div>
  
<div class="form-group">
    <%= f.label :phone,class:'control-label' %><br>
    <%= f.text_field :phone ,class:'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :area,class:'control-label' %><br>
    <%= f.text_field :area ,class:'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :birthday,class:'control-label' %><br>
    <%= f.text_field :birthday ,class:'form-control'%>
  </div>

 <div class="form-group">
    <%= f.label :working_experience,class:'control-label' %><br>
    <%= f.text_field :working_experience ,class:'form-control'%>
  </div>


<div class="form-group">
    <%= f.label :insurance,class:'control-label' %><br>
    <%= f.select :insurance,[['IKA','IKA'],['ΟΓΑ','OGA']],{},{class:'form-control'}%>
</div>

  <div class="form-group">
    <%= f.label :photo,class:'control-label' %><br>
    <%= f.text_field :photo ,class:'form-control'%>
  </div>



<div class="form-group">
    <%= f.label :status,class:'control-label' %><br>
    <%= f.select :status ,Worker.statuses.keys,{},{class:'form-control'}%>
    <!--Formating  the f.select list: the list array is mapped to a new array and using  the humanize method converts lower case to upper -->
  </div>
    
  



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
