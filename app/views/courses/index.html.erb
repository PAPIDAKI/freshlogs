
<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= link_to 'Show', tenant_course_path(@tenant,course) %></td>
        <td><%= link_to 'Edit', edit_tenant_course_path(@tenant,course) %></td>
        <td><%= link_to 'Destroy', [@tenant,course], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_tenant_course_path(@tenant) %>
