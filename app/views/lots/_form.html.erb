<div class="row">
          <%= form_for([@tenant,@lot]) do |f| %>
            <% if @lot.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@lot.errors.count, "error") %> prohibited this lot from being saved:</h2>

                <ul>
                <% @lot.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
          <% end %>
  
    <div class="form-group">
      <%=f.label :lot,class:'control-label'%>
      <%=f.text_field :lot,:placeholder=>@code, class: 'form-control'%>
    </div>
    

     <div class='form-group'>
     <%=f.label :purchase_id,class:'control-label'%>
     <div >
     <%=f.collection_select(:purchase_id,Purchase.all.where(tenant_id:params[:tenant_id]).current.order(created_at: :desc),:id , :details,{:prompt=> true,:selected => 14},{:class=>'form-control'})%> 
   <!--  <%=f.grouped_collection_select(:purchase_id,Grower.where(tenant_id:params[:tenant_id]),:pmus,:name,:id,:location,{:prompt=> true},{:class=>'form-control'})%> -->
     </div>
    </div>

   <div class="form-group">
   <!-- TODO Delete attr  -->
      <%=f.hidden_field :plastics, id:'plastics',class: 'form-control'%>
    </div>


    <div class="form-group">
      <%=f.label :note,class:'control-label'%>
      <%=f.text_field :note, class: 'form-control'%>
    </div>


    <!-- Nested form Weighings -->
      <hr>
        <h4> Weighings:</h4>
       
            <div id ="items">
              <!-- <div id='weighings'> -->
              <%=f.fields_for :weighings do |weighing| %>
                <%=render'weighing_fields',:f=>weighing %>
              <%end%>
                <div class="links">
                  % <%=link_to_add_association 'add weight',f,:weighings%> 
                </div>
            </div>

          <hr>
          
    <div class="form-group">
      <%=f.label :kg,class:'control-label'%>
      <%=f.text_field :kg, id:'kg',class: 'form-control'%>
      <%=f.label :crates,class:'control-label'%>
      <%=f.text_field :crates, id:'crates',placeholder:'Σύνολο Κλουβών',class: 'form-control'%>
    </div>

    
            <%= f.submit 'Save'%>
            <%= link_to 'Cancel',tenant_lots_path %>
         
</div>
  <% end %>



