<h3>Lots</h3>
<%=link_to 'New Lot' ,new_tenant_lot_path%>



<table class='table'>

  <tbody>
      <% @daily_lots.each do |day, lots| %>

        <table class='table table-hover'>
      <h4><strong><%= day.strftime('%d %b ') %></strong>
          <% unless lots.nil? %>
              <span><%=number_with_precision(lots.inject(0){|sum,e| sum += e.kg},precision:0,seperator:',',delimiter:'.')%></span></h4>
        
        <% for lot in lots %> 
           <tr>
            <td> 
              <%= link_to lot.lot,edit_tenant_lot_path(@tenant,lot)%>
               <%= lot.kg %>kg  <strong><%=lot.note%></strong> <br>
         <%= lot.purchase.details%>
           </td>
          </tr>
        <% end %>
          </table>
      <% end %>   
        <br/>
        <% end %>
  </tbody>
      </div>
      </div>

</table>
