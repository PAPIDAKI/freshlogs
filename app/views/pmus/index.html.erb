<div class='raw'>

  <div>
    <h3>Listing Pmus</h3>

  </div>
  <div id="cof">
    <%= link_to 'New Pmu', new_tenant_pmu_path(@tenant) %>
  </div>

<div style='width: 100%;'>
  <div id="map" style='width: 100%; height: 400px;'></div>
</div>

<hr>

</div>
<div class='media'>
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Produce</th>
      <th>Village</th>
      <th>Location</th>
      <th>Size</th>
      <th>Plants</th>
      <th>Production</th>
      <th>Facilities</th>
      <th>Certification</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pmus.each do |pmu| %>
      <tr>
        <td><%= pmu.produce %></td>
        <td><%= pmu.village %></td>
        <td><%= pmu.location %></td>
        <td><%= pmu.size %></td>
        <td><%= pmu.plants %></td>
        <td><%= pmu.production %></td>
        <td><%= pmu.facilities %></td>
        <td><%= pmu.certification %></td>
        <td><%= pmu.latitude %></td>
        <td><%= pmu.longitude %></td>
        <td><%= link_to 'Show',tenant_pmu_path(@tenant,pmu)%></td>
        <td><%= link_to 'Edit', edit_tenant_pmu_path(@tenant,pmu) %></td>
       <% #TODO: add destroy path to destroy link%>
        <td><%= link_to 'Destroy',[@tenant,pmu],method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>



<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json%>);
      handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
});

   
</script>
