<h3>Listing Loadings</h3>
<%= link_to 'New Loading', new_tenant_loading_path(@tenant) %>
<br>
 <h4><%= Palet.where(loading_id:nil).count%></h4>

<div class="media">
<div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Customer</th>
      <th>Order</th>
      <th>Palets</th>
      <th>Eta</th>
      <th>Delivered</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loadings.each do |loading| %>
      <tr>
        <td><%= link_to loading.date.strftime("%e %b %a"),tenant_loading_path(@tenant,loading) %></td>
        <td><%= loading.customer %></td>
        <td></td>
        <td><%= loading.palets.count %></td>
        <td><%= loading.eta.strftime("%a %e %b") %></td>
        <td><%= loading.delivered  %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

